<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.PdfActivity">

    <RelativeLayout
        android:id="@+id/toolbar_up"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_image"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Unggah Pdf"
            android:textAlignment="center"
            android:textColor="@color/blueText"
            android:textSize="30sp" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_iv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/toolbar_up"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pdf17"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="477dp" />

    <EditText
        android:id="@+id/pdf_title_edt"
        android:layout_below="@id/logo_iv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_picture_as_pdf_24"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Judul"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_up" />

    <EditText
        android:id="@+id/pdf_des_edt"
        android:layout_below="@id/pdf_title_edt"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/baseline_picture_as_pdf_24"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Deskripsi"
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdf_title_edt" />

    <TextView
        android:id="@+id/pdf_cat_tv"
        android:layout_below="@id/pdf_des_edt"
        android:layout_width="350sp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:drawableStartCompat="@drawable/baseline_category_24"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_down_24"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:hint="Kategori"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdf_des_edt" />

    <Button
        android:id="@+id/attach_file"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pilih File"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/pdf_cat_tv"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        app:icon="@drawable/baseline_attach_file_24" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_below="@id/attach_file"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blueText"
        android:fontFamily="@font/poppins_bold"
        android:text="Unggah"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/baseline_file_upload_24" />

</RelativeLayout>