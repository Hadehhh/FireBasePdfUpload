<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CategoryAddActivity">

    <RelativeLayout
        android:id="@+id/toolbar_up"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_image"
            android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Tambah Kategori"
            android:textAlignment="center"
            android:textColor="@color/blueText"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_iv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_below="@id/toolbar_up"
        android:src="@drawable/category" />

    <EditText
        android:id="@+id/category_et"
        android:layout_below="@id/logo_iv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/blue"
        android:drawableStart="@drawable/baseline_category_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nama Kategori"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_up" />

    <Button
        android:id="@+id/submitButton"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_centerHorizontal="true"
        android:layout_width="300sp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blueText"
        android:layout_below="@id/category_et"
        android:text="Tambah"
        app:icon="@drawable/categoryicon"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_et" />

</RelativeLayout>